<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name="default" namespace="/" extends="struts-default">
	</package>
	<package name="user" namespace="/background" extends="struts-default">
		<action name="*_*" class="action.{1}Action" method="{2}">
			<result name="login_success" type="redirect">/background/main.jsp</result>
			<result name="login_failure" type="redirect">/background/login.jsp</result>
			<result name="logout_login" type="redirect">/background/login.jsp</result>
			<result name="logout_home" type="redirect">/index.jsp</result>
			<allowed-methods>login,logout</allowed-methods>
		</action>
	</package>
</struts>


